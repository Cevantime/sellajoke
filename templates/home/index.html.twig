{% extends "layout.html.twig" %}

{% block title 'Accueil' %}

{% block content %}
	
	<!-- Header -->
	<header>
		<div class="container" id="maincontent" tabindex="-1">
			<div class="row">
				<div class="col-lg-12">
					<img class="img-responsive" src="{{ asset('img/profile.png')}}" alt="">
					<div class="intro-text">
						<h1 class="name">Sell A Joke{% if user %}, {{ user.username }} {% endif %}</h1>
						<hr class="star-light">
						<span class="skills">Le site de vos meilleures blagues au meilleur prix !</span>
					</div>
				</div>
			</div>
		</div>
	</header>

	{% include 'includes/jokes.html.twig' %}

	{% include 'includes/about.html.twig' %}

	{% include 'includes/contact.html.twig' %}

{% endblock %}


{% block modals %}
	{% for joke in jokes %}
		{% include 'includes/modal.html.twig' with{ joke : joke } %}
	{% endfor %}
{% endblock %}
